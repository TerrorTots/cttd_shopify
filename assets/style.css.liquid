@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&display=swap');
body {
  font-family: 'Oswald', sans-serif;
  font-weight: 200;
  margin: 0;
  background-color: #3b3b3b;
  height: 100vh;
  color: white;
}

#mobile_nav {
  display: flex;
  position: fixed;
  top: 8.5em;
  width: 0;
  height: 100vh;
  background-color: #3b3b3b;
  opacity: 95%;
  transition: width 500ms; 
}
#desktop_nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#desktop_menu {
  display: flex;
  gap: 1em;
  padding-right: 1em;
}
li {
  display: flex;
  list-style: none;
  gap: 1em;
}
#mobile_menu {
  display: flex;
  flex-direction: column;
  padding-left: 1em;
  overflow: hidden;
}

input[type=checkbox] {
  display: none;
 }
header {
  width: 100vw;
  height: fit-content;
  display: flex;
  justify-content: space-between;
  position: sticky;
  top: 0;
  padding: 0;
  z-index: 9999;
  background-color: #3b3b3b;
  opacity: 90%;
}
#hamburger {
  display: none;
  font-size: 6em;
  user-select: none;
  padding: 1%;
  align-items: center;
}
#ham_svg {
  fill: #fff; 
  height: 1em;
}
#ham_svg:hover {
  opacity: 70%;
}
nav {
  z-index: 9999;
}

#social_strip {
  display: flex;
  gap: .5em;
  padding-top: .5em;
}
.social, .cart {
  width: 1em;
  height: 1em;
  fill: #fff;
}

.cart_image {
  width: 200px;
}

.menu_link, a {
  text-decoration: none;
  color: white;
}
.menu_link:hover, a:hover {
  opacity: 70%;
}

#logo_name {
  padding-left: 1rem;
  padding-right: 1rem;
  margin: 0;
}

.page_container {
  display: flex;
  flex-direction: column;
  /* gap: 2rem; */
  width: 80vw;
  height: fit-content;
  padding-left: 3rem;
}
.index { 
  top: 0;
  min-width: 100vw;
  padding-left: 0;
}
.page_content {
  display: flex;
  flex-direction: column;
}
input, textarea, .add_cart_button {
  color: #fff;
  background-color: #5C5A5C;
  border: 0;
  width: 100%; 
  font-family: 'Oswald', sans-serif;
  font-family: 'Poppins', sans-serif;
  box-shadow: none;
  outline: none;
}
textarea {
  resize: none;
  height: 15em;
}
.button, .add_cart_button {
  width: 7em;
  height: 2em;
  /* align-self: flex-end; */
  font-family: 'Oswald', sans-serif;
  font-family: 'Poppins', sans-serif;
}
.button:hover {
  opacity: 70%;
}

input:invalid:focus {
  border: 1px solid rgb(192, 1, 1);
  box-shadow: 2px 1px 5px rgb(214, 0, 0);
}

form {
  display: flex;
  flex-direction: column;
  gap: .5em;
  padding-bottom: 4rem;
}

/* catalog page  */
#store_items {
  display: grid;
  grid-template-columns: repeat(auto-fill, min(220px));
  gap: 10px;
  justify-content: center;
}
.item_tile, .store_item {
  height: 190px;
  width: 200px;
  border-radius: 10px;
}
.item_tile {
  background-color: #5C5A5C;
  align-self: center;
}
.store_item {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.item_info {
  display: flex;
  justify-content: space-between;
  padding: 5px;
}
#product_container {
  display: flex;
  align-content: flex-start;
}
.product_space {
  padding: 0 20px;
  color: #908e90;
}
.product_fix {
  padding-bottom: 0;
  align-self: center;
}
.product_description {
  margin: 0;
}
/* Swiper stuff */
.store_page, .store_item {
  width: 200px;
  height: auto;
  z-index: 10;
}
.front_page, .intro_item {
  width: 100%;
  z-index: 10;
}
.product_page, .product_page_image {
  width: 80vw;
  z-index: 10;
}
.swiper .swiper-button-prev, .swiper .swiper-button-next {
  color: white;
}
.swiper .swiper-pagination-bullet-active {
  background: white;
}
.swiper .swiper-pagination-bullet {
  background: white;
}

/* waves footer stuff */

.custom-shape-divider-bottom-1669434300 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
  line-height: 0;
  transform: rotate(180deg);
  z-index: -2;
}

.custom-shape-divider-bottom-1669434300 svg {
  position: relative;
  display: block;
  width: calc(172% + 1.3px);
  height: 196px;
  z-index: -2;
}

.custom-shape-divider-bottom-1669434300 .shape-fill {
  fill: #5C5A5C;
}

@media screen and (max-width: 1200px) {
  .page_container {
    padding-top: 6em;
  }
  #desktop_nav {
    display: none;
  }
  #logo_name {
    font-size: 6em;
  }
  #hamburger {
    display: flex;
  }
  #intro_items {
    display: flex;
    flex-direction: column;
  }
  #checkbox_toggle:checked ~ #mobile_nav {
    width: 30vw;
    transition: width 1s;

  }
  .social, .cart {
    width: 2em;
    height: 2em;
  }
  .menu_link {
    font-size: 50px;
  }
}
@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&display=swap');
body {
  font-family: 'Oswald', sans-serif;
  margin: 0;
  background-color: #3b3b3b;
  height: 100vh;
  color: white;
}

#mobile_nav {
  display: flex;
  position: fixed;
  top: 8.5em;
  width: 0;
  height: 100vh;
  background-color: #3b3b3b;
  opacity: 98%;
  transition: width 500ms; 
}
#desktop_nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#desktop_menu {
  display: flex;
  gap: 1em;
  padding-right: 1em;
}
li {
  display: flex;
  list-style: none;
  gap: 1em;
}
#mobile_menu {
  display: flex;
  flex-direction: column;
  padding-left: 1em;
  overflow: hidden;
  height: 80vh;
}

/* input[type=checkbox]  */
#checkbox_toggle {
  display: none;
 }
header {
  width: 100vw;
  height: fit-content;
  display: flex;
  justify-content: space-between;
  position: sticky;
  top: 0;
  padding: 0;
  z-index: 9999;
  background-color: #3b3b3b;
  opacity: 90%;
}
#hamburger {
  display: none;
  font-size: 6em;
  user-select: none;
  padding: 1%;
  align-items: center;
}
#ham_svg {
  fill: #fff; 
  height: .5em;
}
#ham_svg:hover {
  opacity: 70%;
}
nav {
  z-index: 9999;
}

#social_strip {
  display: flex;
  gap: .5em;
  padding-top: .5em;
}
.social, .cart {
  width: 1em;
  height: 1em;
  fill: #fff;
}
.cart {
  padding-left: 15px;
}

.cart_image {
  width: 200px;
}

.menu_link, a {
  text-decoration: none;
  color: white;
}
.menu_link:hover, a:hover {
  opacity: 70%;
}

#logo_name {
  padding-left: 1rem;
  padding-right: 1rem;
  margin: 0;
}

.page_container {
  display: flex;
  flex-direction: column;
  /* gap: 2rem; */
  width: 80vw;
  /* max-width: 1000px; */
  height: fit-content;
  padding-left: 3rem;
}
.index { 
  top: 0;
  min-width: 100vw;
  padding-left: 0;
}
.page_content {
  display: flex;
  flex-direction: column;
}
input, textarea, .button {
  color: #fff;
  background-color: #5C5A5C;
  border: 0;
  width: 100%; 
  font-family: 'Oswald', sans-serif;
  font-family: 'Poppins', sans-serif;
  box-shadow: none;
  outline: none;
}
textarea {
  resize: none;
  height: 15em;
}
.button {
  width: 8rem;
  height: 2rem;
  /* align-self: flex-end; */
  font-family: 'Oswald', sans-serif;
  font-family: 'Poppins', sans-serif;
}
.button:hover {
  opacity: 70%;
  cursor: pointer;
}

input:invalid:focus {
  border: 1px solid rgb(192, 1, 1);
  box-shadow: 2px 1px 5px rgb(214, 0, 0);
}

form {
  display: flex;
  flex-direction: column;
  gap: .5em;
  padding-bottom: 4rem;
}

.trash_icon {
  width: 15px;
}
.cart_item_tile {
  background-color: #454345;
  align-self: center;
  /* height: 200px; */
  width: 200px;
  border-radius: 10px;
}
.cart_item_lower_container {
  display: flex;
  justify-content: space-between;
  padding: 0 5px;
}

.cart_content {
  display: grid;
  grid-template-columns: repeat(auto-fill, min(220px));
  gap: 10px;
  justify-content: center;
  width: 100%;
  height: auto;
}
#cart_checkout {
  display: flex;
}

/* catalog page  */
#store_items {
  display: grid;
  grid-template-columns: repeat(auto-fill, min(220px));
  gap: 10px;
  justify-content: center;
  margin-top: 4em;
}
.item_tile, .store_item {
  /* height: 190px; */
  width: 200px;
  border-radius: 10px;
}
.item_tile {
  background-color: #5C5A5C;
  align-self: center;
}
.store_item {
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.item_info {
  display: flex;
  justify-content: space-between;
  padding: 5px;
  overflow: hidden;
  height: 22px;
}

.sort_selection {
  width: fit-content;
}

#side_menu {
  visibility: hidden;
  position: absolute;
  right: 0;
  height: 100vh;
  width: 40vw;
  background-color: #3b3b3b;
  opacity: 90%;
  z-index: 999;
}
#fs_button {
  position: sticky;
  top: 6em;
  left: 3em;
  z-index: 99;
}
#sort-by {
  color: #3b3b3b;
  background-color: #908e90;
  padding: 8px 16px;
  border: none;
  cursor: pointer;
  font-family: 'Oswald', sans-serif;
  font-family: 'Poppins', sans-serif;
  margin-left: 10px;
}
.filter_fix {
  /* height: 2rem; */

}

.filter-group-display__list-item{
  display: grid;  
}
#filter_form {
  padding: 2rem 3rem;
}
#sm_sort, #sm_filter {
  margin: 20px;
}
/* Product page  */
#product_container {
  display: flex;
  align-content: flex-start;
  max-height: 60vh;
  object-fit: cover;
}
.product_space {
  padding: 0 20px;
  color: #908e90;
}
.product_fix {
  padding-bottom: 0;
  align-self: center;
}
.product_description {
  margin: 0;
}
.product_swiper_container {
  max-width: 1000px;
}
/* Swiper stuff */
.store_page, .store_item {
  /* width: 200px;
  height: auto; */
  /* z-index: -1; */
}
.front_page, .intro_item {
  width: 100%;
  z-index: 10;
}
.swiper div {
  z-index: 999999;
  background-color: red;
}
.product_page, .product_page_image {
  max-width: 100%;
  max-height: 60vh;
}
.swiper .swiper-button-prev, .swiper .swiper-button-next {
  color: white;
}
.swiper .swiper-pagination-bullet-active {
  background: white;
}
.swiper .swiper-pagination-bullet {
  background: white;
}

/* waves footer stuff */

.custom-shape-divider-bottom-1669434300 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
  line-height: 0;
  transform: rotate(180deg);
  z-index: -2;
}

.custom-shape-divider-bottom-1669434300 svg {
  position: relative;
  display: block;
  width: calc(172% + 1.3px);
  height: 196px;
  z-index: -2;
}

.custom-shape-divider-bottom-1669434300 .shape-fill {
  fill: #5C5A5C;
}

@media screen and (min-width:1200px) {
  body {
    display: grid;
    grid-template-rows: 3rem;
  }
  .index {
    width: 1200px;
    min-width: 0;
    justify-self: center;
  }

}

@media screen and (max-width: 1200px) {
  .page_container {
    padding-top: 6em;
  }
  #desktop_nav {
    display: none;
  }
  #logo_name {
    font-size: 6em;
  }
  #hamburger {
    display: flex;
  }
  #intro_items {
    display: flex;
    flex-direction: column;
  }
  #checkbox_toggle:checked ~ #mobile_nav {
    width: 40vw;
    transition: width 500ms;
  }
  .cart {
    padding: 0;
    align-self: center;
    margin-top: 5px;
  }
  .menu_link {
    font-size: 50px;
  }
}
@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&display=swap');
body {
  font-family: 'Oswald', sans-serif;
  font-weight: 200;
  margin: 0;
  display: grid;
  grid-template-rows: 5em auto auto;
  background: linear-gradient(164deg, rgb(43, 43, 43) 0%, rgb(84, 82, 84) 52%, rgb(184, 184, 183) 100%);
  height: 100vh;
  color: white;
}
#mobile_nav {
  display: none;
  position: fixed;
  top: 2.5em;
  width: 100vw;
}
#desktop_nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#desktop_menu {
  display: flex;
  gap: 1em;
  padding-right: 1em;
}
li {
  display: flex;
  list-style: none;
  gap: 1em;
}
#mobile_menu {
  display: flex;
  flex-direction: column;
  padding-left: 1em;
}

input[type=checkbox] {
  display: none;
 }
 #mobile_name {
  display: none;
 }
header {
  width: 100vw;
  display: flex;
  justify-content: space-between;
  position: sticky;
  top: 0;
  padding: 0;
  z-index: 9999;
}
header h1, header label {
  /* padding: 0 .5em; */
  /* padding-bottom: 1em; */
}
#hamburger {
  display: none;
  font-size: 2em;
  user-select: none;

}
nav {
  z-index: 9999;
}

#social_strip {
  display: flex;
  gap: .5em;
  padding-top: .5em;
}
.social {
  width: 1em;
  height: 1em;
}

/* .social:hover {
  opacity: 70%;
} */
.menu_link {
  text-decoration: none;
  color: white;
}
.menu_link:hover {
  opacity: 70%;
}


/* Swiper stuff */
.swiper, .intro_item {
  width: 100%;
  z-index: 10;
}
.swiper .swiper-button-prev, .swiper .swiper-button-next {
  color: white;
}
.swiper .swiper-pagination-bullet-active {
  background: white;
}
.swiper .swiper-pagination-bullet {
  background: white;
}

@media screen and (max-width: 800px) {
  /* body {
    height: 100%;
  } */
  #desktop_nav {
    display: none;
  }
  #logo_name {
    display: none;
  }
  #mobile_name {
    display: block;
    margin: 0;
  }
  #hamburger {
    display: flex;
  }
  #intro_items {
    display: flex;
    flex-direction: column;
  }
  #checkbox_toggle:checked ~ #mobile_nav {
    display: flex;
  }
  
}